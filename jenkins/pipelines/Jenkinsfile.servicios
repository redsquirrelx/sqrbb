pipeline {
    agent {
        dockerfile {
            filename 'jenkins/agents/Dockerfile.despl'
        }
    }

    parameters {
        choice(
            name: 'SERVICIO',
            choices: [
                'propiedades',
                'reservas',
            ],
            description: 'Servicio'
        )

        choice(
            name: 'REGION',
            choices: [
                'us-east-2',
                'eu-west-1',
            ],
            description: 'Regi√≥n'
        )
    }

    stages {
        stage('Clonar') {
            steps {
                checkout scm
            }
        }

        stage('Obtener outputs del provisionamiento') {
            steps {
                copyArtifacts(
                    projectName: 'provisionamiento',
                    selector: lastSuccessful(),
                    filter: 'tf-outputs.json'
                )
            }
        }
        
        stage('Pruebas unitarias') {
            steps {
                echo 'Testing...'
            }
        }
        
        stage('Desplegar') {
            steps {
                withCredentials([[ $class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'my_aws_credential']]) {
                    sh """
                        export AWS_REGION="us-east-2"
                        ansible-playbook 
                        -i config/inventory.ini
                        config/despl-servicios.yaml
                        -e "msrvc_name=${params.SERVICIO} region=${params.SERVICIO}"
                    """
                }
            }
        }
    }
}