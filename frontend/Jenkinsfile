pipeline {
    agent any

    stages {
        stage('Clonar') {
            steps {
                checkout scm
            }
        }

        stage('Obtener output del provisionamiento') {
            steps {
                copyArtifacts(
                    projectName: 'provisionamiento',
                    selector: lastSuccessful(),
                    filter: 'tf-outputs.json'
                )
            }
        }

        stage('Desplegar dist') {
            steps {
                sh 'ansible-playbook -i config/inventory.ini config/despl-frontend.yaml'
            }
        }
    }
}